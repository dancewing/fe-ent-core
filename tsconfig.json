{
  "compilerOptions": {
    "allowJs": true,
    "strict": true,
    "module": "ES6",
    "target": "ES2018",
    "noImplicitAny": false,
    "declaration": true,
    "moduleResolution": "Node",
    "esModuleInterop": true,
    "jsx": "preserve",
    "sourceMap": true,
    "lib": ["ES2018", "DOM"],
    "allowSyntheticDefaultImports": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true
  },
  "include": [
    "tests/**/*.ts",
    "packages/core/**/*.ts",
    "packages/core/**/*.d.ts",
    "packages/core/**/*.tsx",
    "packages/core/**/*.tsx",
    "play",
    "scripts/**/*.ts",
  ],
  "exclude": ["node_modules", "tests/server/**/*.ts", "dist"]
}
