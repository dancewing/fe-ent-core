{
  "compilerOptions": {
    "allowJs": false,
    "allowSyntheticDefaultImports": true,
    "baseUrl": ".",
    "composite": false,
    "declaration": true,
    "declarationMap": false,
    "disableSizeLimit": true,
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "forceConsistentCasingInFileNames": true,
    "jsx": "preserve",
    "lib": [
      "DOM",
      "DOM.Iterable",
      "ES2018"
    ],
    "module": "esnext",
    "moduleResolution": "node",
    "noImplicitAny": false,
    "noUnusedLocals": true,
    "outDir": "./dist/types",
    "preserveSymlinks": true,
    "removeComments": false,
    "resolveJsonModule": true,
    "rootDir": ".",
    "skipLibCheck": true,
    "sourceMap": false,
    "strict": true,
    "strictFunctionTypes": false,
    "target": "esnext",
    "paths": {
      "/#/*": [
        "types/*"
      ],
      "/@/*": [
        "play/src/*"
      ],
      "@ent-core/*": [
        "./packages/core/*"
      ],
      "fe-ent-core": ["./packages/core/index.ts"],
      "fe-ent-core/lib/*": ["./packages/core/*"],
      "@fe-ent-extension/*": ["./packages/extensions/*"]
    },
    "types": [
      "node",
      "jest",
      "vite/client",
      "unplugin-vue-macros/macros-global"
    ]
  },
  "include": [
    "tests/**/*.ts",
    "packages",
    "internal/**/*.ts",
    "scripts/*.ts",
    "typings/global.d.ts",
    "typings/support.d.ts"
  ],
  "exclude": [
    "node_modules",
    "tests/server/**/*.ts",
    "dist",
    "**/*.js"
  ]
}
