{
  "$schema": "https://json.schemastore.org/tsconfig",
  "extends": "ts-config-ent/web.json",
  "compilerOptions": {
    "baseUrl": ".",
    "preserveSymlinks": true,
    "paths": {
      "fe-ent-core": ["../../packages/fe-ent-core"],
      "fe-ent-core/es": ["../../packages/fe-ent-core/es"],
      "vue": ["../../node_modules/vue"],
      "vue-i18n": ["../../node_modules/vue-i18n"],
      "vue-types": ["../../node_modules/vue-types"],
      "axios": ["../../node_modules/axios"],
      "@vueuse/shared": ["../../node_modules/@vueuse/shared"],
      "naive-ui/es/*": ["../../node_modules/naive-ui/es/*"],
      "@vue/shared": ["../../node_modules/@vue/shared"],
      "@types/lodash-es": ["../../node_modules/@types/lodash-es"],
      "@types/lodash": ["../../packages/fe-ent-core/node_modules/@types/lodash"]
    },
    "types": ["vite/client"]
  },
  "include": ["components/**/*", "hooks/*", "store/*", "locales", "types.ts", "index.ts"],
  "exclude": [
    "node_modules",
    "**/node_modules/**",
    "dist",
    "es",
    "lib",
    "json",
    "**/dist",
    "**/__tests__/**/*",
    "**/gulpfile.ts",
    "**/test-helper",
    "**/*.md"
  ]
}
