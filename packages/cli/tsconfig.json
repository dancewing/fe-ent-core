{
  "compilerOptions": {
    "target": "esnext",
    "module": "esnext",
    "allowJs": false,
    "strict": true,
    "moduleResolution": "node",
    "skipLibCheck": true,
    "noUnusedLocals": true,
    "experimentalDecorators": true,
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "sourceMap": false,
    "outDir": "dist",
    "types": [
      "vite/client",
      "jest"
    ],
    "typeRoots": ["./node_modules/@types/", "../../types"]
  },
  "include": [
    "src/**/*",
    "../../types/**/*.d.ts",
    "../../types/**/*.ts"
  ],
  "exclude": [
    "node_modules"
  ]
}
