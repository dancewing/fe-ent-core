{
  "$schema": "https://json.schemastore.org/tsconfig",
  "extends": "ts-config-ent/web.json",
  "compilerOptions": {
    "baseUrl": ".",
    "types": ["vite/client", "node"],
    "paths": {
      "@ent-core/*": ["./*"]
    }
  },
  "include": [
    "components",
    "directives",
    "hooks",
    "locales",
    "logics",
    "router",
    "store",
    "types",
    "utils",
    "index.ts",
    "global.ts"
  ],
  "exclude": [
    "node_modules",
    "dist",
    "es",
    "lib",
    "json",
    "**/dist",
    "**/__tests__/**/*",
    "**/gulpfile.ts",
    "**/test-helper",
    "**/*.md"
  ]
}
