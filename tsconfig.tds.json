{
  "compilerOptions": {
    "allowJs": false,
    "allowSyntheticDefaultImports": true,
    "baseUrl": ".",
    "composite": false,
    "declaration": true,
    "declarationMap": false,
    "disableSizeLimit": true,
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "forceConsistentCasingInFileNames": true,
    "jsx": "preserve",
    "lib": [
      "DOM",
      "DOM.Iterable",
      "ES2018"
    ],
    "module": "esnext",
    "moduleResolution": "node",
    "noImplicitAny": false,
    "noUnusedLocals": true,
    "outDir": "./dist/types",
    "paths": {
      "@ent-core/*": [
        "packages/*"
      ]
    },
    "preserveSymlinks": true,
    "removeComments": false,
    "resolveJsonModule": true,
    "rootDir": ".",
    "skipLibCheck": true,
    "sourceMap": false,
    "strict": true,
    "strictFunctionTypes": false,
    "target": "esnext",
    "typeRoots": [
      "./node_modules/@types",
      "./typings"
    ],
    "types": [
      "@types/node",
      "vite/client"
    ]
  },
  "include": [
    "./packages/**/*.ts",
    "./packages/**/*.d.ts",
    "./packages/**/*.tsx",
    "./packages/**/*.vue"
  ],
  "exclude": [
    "node_modules"
  ]
}
