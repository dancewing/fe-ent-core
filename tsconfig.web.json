{
  "extends": "./tsconfig.base.json",
  "compilerOptions": {
    "composite": true,
    "jsx": "preserve",
    "lib": ["ESNext", "DOM", "DOM.Iterable"],
    "skipLibCheck": true,
    "strictFunctionTypes": false,
    "types": ["unplugin-vue-macros/macros-global", "vite/client"],
    "paths": {
      "@ent-core/*": ["packages/*"],
      "/@/*": [
        "play/src/*"
      ],
      "fe-ent-core": ["./packages/fe-ent-core/index.ts"],
      "fe-ent-core/lib/*": ["./packages/*"],
      "@fe-ent-extension/*": ["./extensions/*"],
      "@fe-ent-app/*": ["./apps/*/src/index.ts"]
    }
  },
  "include": [
    "packages",
    "extensions",
    "apps",
    "typings/*.d.ts",
    "play/src",
  ],
  "exclude": [
    "node_modules",
    "dist",
    "**/dist",
    "**/__tests__/**/*",
    "**/gulpfile.ts",
    "**/test-helper",
    "**/*.md"
  ]
}
