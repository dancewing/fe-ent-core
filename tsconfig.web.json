{
  "extends": "./tsconfig.base.json",
  "compilerOptions": {
    "composite": true,
    "jsx": "preserve",
    "lib": ["ES2018", "DOM", "DOM.Iterable"],
    "types": ["unplugin-vue-macros/macros-global", "unplugin-vue-define-options/macros-global", "vite/client"],
    "skipLibCheck": true,
    "strictFunctionTypes": false,
  },
  "include": [
    "packages/**/*.ts",
    "packages/**/*.d.ts",
    "packages/**/*.tsx",
    "packages/**/*.vue",
    "packages/**/*.svg",
    "packages/**/*.png",
    "packages/**/*.jpg",
    "typings/support.d.ts",
    "typings/global.d.ts"
  ],
  "exclude": [
    "node_modules",
    "dist",
    "**/dist",
    "**/__tests__/**/*",
    "**/gulpfile.ts",
    "**/test-helper",
    "packages/test-utils",
    "**/*.md"
  ]
}
