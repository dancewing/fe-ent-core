{
  "extends": "./tsconfig.base.json",
  "compilerOptions": {
    "allowJs": false,
    "allowSyntheticDefaultImports": true,
    "baseUrl": ".",
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "forceConsistentCasingInFileNames": true,
    "jsx": "preserve",
    "lib": [
      "dom",
      "esnext"
    ],
    "module": "esnext",
    "moduleResolution": "node",
    "noImplicitAny": false,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "sourceMap": true,
    "strict": false,
    "strictFunctionTypes": false,
    "target": "esnext",
    "paths": {
      "/#/*": [
        "types/*"
      ],
      "@ent-core/*": [
        "packages/*"
      ]
    },
    "typeRoots": [
      "./node_modules/@types/",
      "./typings"
    ],
    "types": [
      "node",
      "jest",
      "vite/client"
    ]
  },
  "include": ["packages", "typings/global.d.ts", "typings/support.d.ts"],
  "exclude": [
    "node_modules",
    "dist",
    "**/dist",
    "**/__tests__/**/*",
    "**/gulpfile.ts",
    "**/test-helper",
    "packages/test-utils",
    "**/*.md"
  ]
}
