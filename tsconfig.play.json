{
  "extends": "./tsconfig.web.json",
  "compilerOptions": {
    "allowJs": true,
    "lib": ["ESNext", "DOM", "DOM.Iterable"],
    "paths": {
      "@ent-core/*": ["packages/*"],
      "/#/*": [
        "types/*"
      ],
      "/@/*": [
        "play/src/*"
      ],
      "fe-ent-core": ["packages/fe-ent-core/index.ts"],
      "fe-ent-core/lib/*": ["packages/*"],
      "@fe-ent-extension/*": ["extensions/*"]
    }
  },
  "include": [
    "packages",
    "typings/support.d.ts",
    "typings/global.d.ts",
    // playground
    "play/src/**/*"
  ]
}
